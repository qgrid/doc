<nav>
    <ul>
        <%
        var groups = ['Getting started', 'Features', 'API'];
        var pageGroups = site.pages.reduce(function (memo, p) {
            var key = p.group;
            (memo[key] = memo[key] || []).push(p);
            return memo;
        }, {});

        for (var i = 0; i < groups.length; i++) {
            var group = groups[i];

                if (pageGroups.hasOwnProperty(group)) {
        %>
                    <li><h3><%- group %></h3></li>
        <%
                    var pages = 
                        pageGroups[group]
                            .filter(function(page) { 
                                return page.order >= 0; 
                            });

                    pages.sort(function (a, b) {
                        return a.order - b.order;
                    });
                    var stringOftags = [];

                    for (var j = 0; j < pages.length; j++) {
                        var p = pages[j];
                        if (p.tags){
                            for (var index = 0; index < p.tags.length; index++){
                                if (index==0){ stringOftags[j]=''};
                                stringOftags[j] +=p.tags[index]+',';
                            }}
        %>
                        <li data-tag="<%- stringOftags[j]%>" class="<%- page.title === p.title ? 'active-topic' : '' %> ">
        <%
                        
                            if (page.title === p.title) {
        %>
                            <span><%- p.title %></span>
        <%
                            } else {
        %>
                            <a class="title" href="<%- url_for(p.path) %>"><%- p.title %></a>
        <%
                            }
        %>
                        </li>
        <%
                    }
                }
            }
        %>

    </ul>
</nav>